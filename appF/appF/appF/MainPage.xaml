            <Label  Text="1.Piensa en tu dia de nacimiento." TextColor="White"/>
        </Frame>
        <Frame BackgroundColor="Gray">
            <Label Text="2. El dica de tu nacimiento multiplicalo por 20. " TextColor="White"/>
        </Frame>
        <Frame BackgroundColor="Gray">

            <Label Text="3. Ahora sumale 73." TextColor="White"/>
        </Frame>
        <Frame BackgroundColor="Gray">

            <Label Text="4.Ahora multiplicalo por 5 y tambien sumale el mes de tu nacimiento. " TextColor="White"/>
        </Frame>
        <Entry x:Name="resultado" Placeholder="ingrese resultado" />
        <Button Text="Adivinr" Clicked="Button_Clicked" HorizontalOptions="Center" BackgroundColor="Blue" />
    </StackLayout>

</ContentPage>
